<h1>Editing pack</h1>

<% form_for(@pack) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :ingrediente %><br />
    <%= f.text_field :ingrediente %>
  </p>
  <p>
    <%= f.label :cantidad %><br />
    <%= f.text_field :cantidad %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @pack %> |
<%= link_to 'Back', packs_path %>
