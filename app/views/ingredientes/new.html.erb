<h1>New ingrediente</h1>

<% form_for(@ingrediente) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
	<p>
		<% for unidad in @unidadesmedida %>
			<input type="checkbox" name="unidad_<%= unidad.id %>" id="unidad" value="yes">
			<%= unidad.nombre %><br>
		<% end %>
	</p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', ingredientes_path %>
