<h1>Listing ingredientes</h1>

<table>
  <tr>
    <th>Nombre</th>
    <th>Unidadmedia</th>
  </tr>

<% for ingrediente in @ingredientes %>
  <tr>
    <td><%=h ingrediente.nombre %></td>
    <td><%=h ingrediente.unidadmedia %></td>
    <td><%= link_to 'Show', ingrediente %></td>
    <td><%= link_to 'Edit', edit_ingrediente_path(ingrediente) %></td>
    <td><%= link_to 'Destroy', ingrediente, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New ingrediente', new_ingrediente_path %>
